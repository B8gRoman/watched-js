{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@types/node": "^13.13.4",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "test-all": "lerna bootstrap --hoist && lerna run build && lerna run test",
    "publish": "npm run test-all && lerna publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,md}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
