{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@types/node": "^14.0.23",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "tslint": "^6.1.2",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "test-all": "lerna bootstrap --hoist && lerna run build && lerna run test",
    "publish": "npm run test-all && lerna publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,md}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
