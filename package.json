{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@types/node": "^13.9.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "tslint": "^6.0.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "publish": "lerna bootstrap --hoist && lerna run build && lerna run test && lerna publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,md}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
